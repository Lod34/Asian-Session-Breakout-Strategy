type Bar
    float open = open
    float high = high
    float low = low
    float close = close
    int   index = bar_index

type Session 
    string  []  titles
    float   []  openHours
    float   []  closeHours
    int     []  timeOffsets

    line        highLine
    line        midLine
    line        lowLine
    float       highPrice
    float       lowPrice

    box         buyZoneBox
    box         sellZoneBox
    bool        buyZone
    bool        buySide
    bool        sellZone
    bool        sellSide

    box         lastBuyZoneBox
    box         lastSellZoneBox
    bool        lastBuyZone
    bool        lastBuySide
    bool        lastSellZone
    bool        lastSellSide

type PivotPoint
    float  high
    int    highTime
    bool   highCrossed 

    float  low
    int    lowTime
    bool   lowCrossed

type FairValueGap
    box  [] upperFairValueGaps

